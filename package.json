{
  "name": "remote",
  "version": "1.0.0",
  "description": "OpenCode Vibe Kanban - AI Agent orchestration platform",
  "main": "index.js",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n ts,rust,client -c blue,yellow,green \"pnpm run dev:ts\" \"pnpm run dev:rust\" \"pnpm run dev:client\"",
    "dev:ts": "pnpm --filter @opencode-vibe/server run dev",
    "dev:rust": "cd crates && cargo watch -x \"run -p api-server\"",
    "dev:client": "pnpm --filter client run dev",
    "check:docs:features": "node scripts/check-feature-doc-index.mjs",
    "cleanup:data": "node scripts/cleanup-runtime.mjs --dry-run",
    "cleanup:data:apply": "node scripts/cleanup-runtime.mjs --apply",
    "test:scripts": "node --test \"scripts/__tests__/*.test.mjs\"",
    "build": "pnpm run build:rust && pnpm run build:ts",
    "build:ts": "pnpm -r run build",
    "build:rust": "cd crates && cargo build --release",
    "test": "pnpm run test:scripts && pnpm run test:ts && pnpm run test:rust",
    "test:ts": "pnpm -r run test",
    "test:rust": "cd crates && cargo test"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
